<div class = "container">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">ActivityTracker</a>
      </div>
      <%= link_to "Add user", new_user_path, class: "btn btn-default"%>
    </div>
  </nav>

  <table>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.name %></td>
        <% u.exercises.reverse_each  do |e| %>
          <td class="exercise-success">
            <a href=
            <%= "https://github.com/#{u.name}/#{u.repo}/releases/#{e.name}" %>>
             <%= e.name %>
           </a>
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
